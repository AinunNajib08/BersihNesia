<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">
    <RelativeLayout
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="16dp"
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ic_camera"
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        </android.support.v7.widget.CardView>
        <ImageButton
            android:id="@+id/img_photo"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_camera"
            android:background="@color/btnBlue"
            android:layout_below="@id/c1"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/photo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/c1"
            android:text="pick_name.jpg"
            android:layout_toRightOf="@id/img_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_profil"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img_photo"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:id="@+id/txt_nama"
            android:layout_below="@id/txt_profil"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"/>
        <TextView
            android:text="name"
            android:layout_below="@id/txt_nama"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/txt_email"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>
        <TextView
            android:text="email"
            android:layout_below="@id/txt_email"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@id/email"
            android:text="Jenis Kelamin"
            android:id="@+id/txt_jk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="jenis kelamin"
            android:id="@+id/jk"
            android:layout_below="@id/txt_jk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="No. HP"
            android:layout_below="@id/jk"
            android:id="@+id/txt_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/no"
            android:layout_below="@id/txt_no"
            android:text="No HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_below="@id/no"
            android:layout_marginTop="5dp"
            android:text="Alamat"
            android:id="@+id/txt_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="alamat"
            android:id="@+id/alamat"
            android:layout_below="@id/txt_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>