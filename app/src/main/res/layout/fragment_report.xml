<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp"
    tools:context=".fragment.ReportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="fitXY" />

        </android.support.v7.widget.CardView>

        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/c1"
            android:layout_marginTop="10dp"
            android:background="@color/btnBlue"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/txt_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_camera"
            android:layout_marginTop="10dp"
            android:text="Lokasi"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/l1"
            android:weightSum="2"
            android:layout_below="@id/txt_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:background="@drawable/ic_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageButton
                android:background="@color/btnBlue"
                android:src="@drawable/ic_location"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_keterangan"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Keterangan"
            android:layout_marginTop="10dp"
            android:layout_below="@id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/description"
            android:layout_below="@id/txt_keterangan"
            android:background="@drawable/ic_form"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <Button
            android:textColor="@android:color/white"
            android:background="@drawable/ic_button"
            android:text="Report"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_below="@id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</FrameLayout>